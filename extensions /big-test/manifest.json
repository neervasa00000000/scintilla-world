{
  "manifest_version": 3,
  "name": "Block The Buy - Impulse Purchase Blocker",
  "version": "1.0.0",
  "description": "Blocks impulse purchases by adding friction to buy buttons. Save money, think before you buy!",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ]
}

